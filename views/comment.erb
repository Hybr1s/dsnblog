<article class="comment container" itemprop="comment" itemscope itemtype="http://schema.org/UserComments">
    <%= comment.body %>
    <footer>From
        <% if comment.author.url != "" %>
            <a href="<%= comment.author.url %>"><%= comment.author.name %></a>
        <% else %>
            <%= comment.author.name %>
        <% end %>
    </footer>
    <% if isAdmin? %>

        <a href="/<%= comment.id %>/editComment"><button type="submit" class="edit">edit</button></a>
   
        <form action="/<%= comment.id %>/deleteComment" method="POST">
            <button type="submit" class="delete">delete</button>
        </form>
        <form action="/<%= comment.id %>/ham" method="POST">
            <button type="submit">ham</button>
        </form>
        <form action="/<%= comment.id %>/spam" method="POST">
            <button type="submit">spam</button>
        </form>
        <a href="/<%= comment.id %>/verdict">see rating</a>
        <i><%= comment.status %></i>
    <% end %>
</article>